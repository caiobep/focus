{
  "compilerOptions": {
    "target": "es6",
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "pretty": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "strictNullChecks": false,
    "skipDefaultLibCheck": true,
    "types": [
      "node",
      "jest"
    ]
  },
  "include": ["src"]
}